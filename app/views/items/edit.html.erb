<h1>Editing Item</h1>

<%= form_for @item do |f| %>
  <div class="field">
    <%= f.label :product_id %><br>
    <%= f.select :product_id, options_from_collection_for_select(@products, "id", "p_name"), prompt: "select a product" %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.text_field :quantity %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', @shoppinglist %>
